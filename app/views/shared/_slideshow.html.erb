<div id="myCarousel" class="carousel slide d-none d-md-block" data-ride="carousel">
  <ol class="carousel-indicators">
    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
    <li data-target="#myCarousel" data-slide-to="1"></li>
    <li data-target="#myCarousel" data-slide-to="2"></li>
    <li data-target="#myCarousel" data-slide-to="3"></li>
  </ol>
  <div class="carousel-inner" role="listbox">
    <div class="carousel-item active">
      <%= image_tag "GetStarted.jpg" %>
      <div class="container">
        <div class="carousel-caption d-none d-md-block text-left">
          <h1><%= t('carousel.welcome') %></h1>
          <p>We are CineHub! The ultimate movie app!</p>
          <p><%= t('carousel.join_us') %></p>
          <p><%= link_to 'Sign Up', new_user_registration_path, class:'btn btn_highlight' %></p>
        </div>
      </div>
    </div>
    <div class="carousel-item">
      <%= image_tag "WhoAreWeJumbotron.jpg" %>
      <div class="container">
        <div class="carousel-caption d-none d-md-block text-right">
          <h1><%= t('carousel.who_are_we') %></h1>
          <p>Get to know us better.</p>
          <p><%= link_to 'About', welcome_about_path, class:'btn btn_highlight' %></p>
        </div>
      </div>
    </div>
    <div class="carousel-item">
      <%= image_tag "SecondCinemaJumbotron.jpg" %>
      <div class="container">
        <div class="carousel-caption d-none d-md-block text-right">
          <h1><%= t('carousel.favourite_movies') %></h1>
          <p>Search Movies.</p>
          <p><%= link_to 'Movies', welcome_movies_path, class:'btn btn_highlight' %></p>
        </div>
      </div>
    </div>
    <div class="carousel-item">
      <%= image_tag "FindNearbyCinemasJumbotron.jpg" %>
      <div class="container">
        <div class="carousel-caption d-none d-md-block text-right">
          <h1><%= t('carousel.find_nearby_cinemas') %></h1>
          <p>View all cinemas.</p>
          <p><%= link_to 'Find Nearby Cinema', transactions_path, class:'btn btn_highlight' %></p>
        </div>
      </div>
    </div>
  </div>
  <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>