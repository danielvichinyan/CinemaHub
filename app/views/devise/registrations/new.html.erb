<section class="container">
  <div class="row">
    <div class="col-md-12" style="margin-top:5rem">
      <div class="btn_holder">
        <h2><%= t('user.sign_up.title') %></h2>
      </div>
    </div>
  </div>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="row">
    <div class="col-md-12 btn_holder">
      <div class="field">
        <%= f.label :username %><br />
        <%= f.text_field :username, class: "form-control", style: "width: 30%; display: inline;" %>
      </div>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", style: "width: 30%; display: inline;" %>
      </div>

      <div class="field">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control", style: "width: 30%; display: inline;" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", style: "width: 30%; display: inline;" %>
      </div>

      <div class=”field”>
        <%= f.label :age %><br />
        <%= f.number_field :age, autofocus: true, class: "form-control", style: "width: 30%; display: inline; margin-bottom: 2rem;" %>
      </div>

      <div class="actions">
        <div class="btn_holder">
          <%= f.submit "Sign up", class:"btn btn_dark" %>
        </div>
      </div>
  <% end %>
    </div>
  </div>
</section>