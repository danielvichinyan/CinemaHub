<section class="container">
  <div class="row">
    <div class="col-md-12" style="margin-top:5rem">
      <div class="btn_holder">
        <h2><%= t('user.edit_user.title') %></h2>
      </div>
    </div>
  </div>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="row">
    <div class="col-md-12 btn_holder">
      <div class="field">
        <%= f.label :username %><br />
        <%= f.text_field :username, class: "form-control", style: "width: 30%; display: inline;" %>
      </div>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", style: "width: 30%; display: inline;" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="field">
        <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control", style: "width: 30%; display: inline;" %>
        <% if @minimum_password_length %>
          <br />
          <em><%= @minimum_password_length %> characters minimum</em>
        <% end %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", style: "width: 30%; display: inline;" %>
      </div>

      <div class="field">
        <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
        <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control", style: "width: 30%; display: inline;" %>
      </div>

      <div class="field">
        <%= f.label :avatar %> <i>(this image will be displayed on your profile)</i><br />
        <%= f.file_field :avatar %>
      </div>

      <div class="actions">
        <%= f.submit "Update", class: "btn btn_dark" %>
      </div><br>
    </div>
    <% end %>
    <div class="col-md-12 btn_holder">
      <p>Unhappy? <%= button_to "Delete my account", registration_path(resource_name), class: "btn btn_dark", data: { confirm: "Are you sure?" }, method: :delete %></p>
    </div>
  </div>
</div>
</section>

